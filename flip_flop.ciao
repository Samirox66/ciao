FlipFlop

VAR:
    test = true;
    button = false.

EFFECT:
    isItLightOutside();
    turnOnLamp();
    turnOffLamp().

EVENT:
    buttonPress(mode);
    isButtonPressed().


STATE:
    entry -> / -> ready;
    ready -> {self.button} / -> check;
    check -> {isItLightOutside()} / -> error;
    check -> else / {turnOnLamp()} -> wait;
    wait -> {not self.button} / {turnOffLamp()} -> ready;
    error -> / {self.__printInfo("It is light outside")} -> exit.
